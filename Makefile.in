EBOOKCONVERT=$(shell which ebook-convert)

all:
	(cd src && $(MAKE))

install:	all
	(cd src && $(MAKE) install DESTDIR=$(DESTDIR))

documentation:
	mkdir -p docs/out/{html,pdf}
	#gitbook build . docs/out/html
	PATH=$(shell dirname $(EBOOKCONVERT)):$(shell echo $$PATH) gitbook pdf . docs/out/pdf/libmtev-manual.pdf

clean:
	(cd src && $(MAKE) clean)
	(cd test && $(MAKE) clean)

distclean: 	clean
	rm -f Makefile config.status config.log
	(cd src && $(MAKE) distclean)
	(cd test && $(MAKE) distclean)
